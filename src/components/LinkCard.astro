---
interface Props {
  title: string;
  body: string;
  href?: string;
}

const { title, body, href } = Astro.props;
---
<li class="border-2 border-stone-700 dark:border-stone-300 h-64 w-60 p-4 mx-9 mt-10 rounded-lg">
  <a href={href} >
  <h2 class="text-2xl">
    {title}
    <span>&rarr;</span>
    </h2>
    <p>{body}</p>
  </a>
</li>
